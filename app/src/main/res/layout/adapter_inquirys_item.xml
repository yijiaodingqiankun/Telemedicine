<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="149dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/home_table_white_bg"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="149dp"
        android:layout_marginEnd="6dp">

        <ImageView
            android:id="@+id/inquirys_item_avatar"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/user_avater" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inquirys_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="의사"
            android:textColor="#de010101"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/inquirys_item_2line_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inquirys_item_name">

            <TextView
                android:id="@+id/inquirys_item_line2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주치의사"
                android:textColor="#8a010101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inquirys_item_line2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:text="호흡과"
                android:textColor="#8a010101"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/inquirys_item_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:paddingEnd="12dp"
            android:text="전문영역：만성기침,기관지천식,저항폐, 폐심증,폐전증,흉막질환..."
            android:textColor="#ab000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inquirys_item_2line_ll" />

        <LinearLayout
            android:id="@+id/inquirys_item_like_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inquirys_item_desc_tv">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inquirys_item_like_icon" />

            <TextView
                android:id="@+id/inquirys_item_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="302"
                android:textColor="#8a010101"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inquirys_item_num_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/inquirys_item_like_ll"
            app:layout_constraintTop_toBottomOf="@id/inquirys_item_desc_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="问诊量"
                android:textColor="#8a010101"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inquirys_item_inquiryNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="302"
                android:textColor="#8a010101"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/inquirys_item_btn"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/inquirys_item_btn_bg"
            android:text="상담"
            android:textColor="#fffefe"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>