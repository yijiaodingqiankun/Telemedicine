<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hanmi.telemedicine.widgets.ImmersionStatusBarLayout
        android:id="@+id/home01_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hanmi.telemedicine.widgets.ImmersionStatusBarLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/medical_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="#1d7cfc"
        app:tabIndicatorHeight="2dp"
        app:tabMaxWidth="0dp"
        app:tabMinWidth="77dp"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#1d7cfc"
        app:tabTextColor="#333333" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/medical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>